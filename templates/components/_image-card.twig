{# Params #}
{% set cardData = cardData|default(null) %}
{% set classNames = classNames|default('') %}

{# Variables #}

{# Markup #}
{% if cardData is not null %}
  <article class='image-card {{ classNames }}'>
    <img
      src='{{ cardData.image.one.url }}'
      alt='{{ cardData.image.one.title }}'
      class='image-card__image'
    />

    <section class='image-card__content'>
      <p class='image-card__content__title'>
        {{ cardData.title }}
      </p>

      <p class='image-card__content__copy'>
        {{ cardData.teaserCopy }}
      </p>

      {% include "components/_link-chevron" with {
        linkCopy: 'See Details',
        linkUrl: cardData.url,
        classNames: 'image-card__content__link'
      } %}
    </section>
  </article>
{% endif %}