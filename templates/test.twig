{% set desiredCategory = craft.categories.group('digitalInsights').title('development').one %}
{% set designSlides = craft.entries.section('herouselSlides').relatedTo(desiredCategory).all %}

{% extends '_layout' %}

{# Markup #}
{% block content %}
  <h1 style="display:inline-block;padding-top:50px;padding-left:50px;border-bottom:1px solid rgba(50,50,50,0.3);">
    {{ desiredCategory }} Articles
  </h1>
  {% if designSlides is not empty %}
    {% for slide in designSlides %}
      <article style="padding: 50px;border-bottom:1px solid rgba(50,50,50,0.3);">
        <h2>
          {{ slide.title }}
        </h2>

        <p>
          {{ slide.slideCategory.one }}
        </p>
      </article>
    {% endfor %}
  {% endif %}
  
{% endblock %}